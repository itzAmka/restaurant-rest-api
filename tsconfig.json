{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"removeComments": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@/config*": ["src/config/*"],
			"@/controllers*": ["src/controllers/*"],
			"@/models*": ["src/models/*"],
			"@/services*": ["src/services/*"],
			"@/middlewares*": ["src/middlewares/*"],
			"@/routes*": ["src/routes/*"],
			"@/types*": ["src/types/*"],
			"@/utils*": ["src/utils/*"]
		}
	}
}
